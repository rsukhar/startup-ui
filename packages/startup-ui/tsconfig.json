{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "Bundler",

        "rootDir": "src",
        "outDir": "dist/types",

        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,

        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
        "@/*": ["src/*"]
        }
    },

    "include": ["src"],
    "exclude": ["dist", "node_modules"]
}